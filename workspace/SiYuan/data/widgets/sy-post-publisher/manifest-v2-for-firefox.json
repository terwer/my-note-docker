{
  "name": "思源笔记发布辅助工具",
  "version": "0.0.3",
  "manifest_version": 2,
  "author": "terwer",
  "description": "思源笔记发布辅助工具，支持博客式只读浏览，多平台文章发布。",
  "applications": {
    "gecko": {
      "id": "terwer@terwer.space",
      "strict_min_version": "47.0"
    }
  },
  "background": {
    "scripts": ["background.js"]
  },
  "externally_connectable": {
    "matches": [
      "*://*.cnblogs.com/*"
    ]
  },
  "web_accessible_resources": [
    "blog/index.html",
    "detail/index.html",
    "publish/index.html",
    "index.html"
  ],
  "browser_action": {
    "default_popup": "blog/index.html"
  }
}